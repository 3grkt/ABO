@using ABO.Web.Models.ProfileTypes
@model ProfileTypeModel

@{
    //var buttonName = Model.Id > 0 ? T("ProfileType.Create") : T("ProfileType.Edit");
    var controlTitle = Model.Id == 0 ? T("ProfileType.AddNewProfileType") : T("ProfileType.EditProfileType");
}

<fieldset class="fieldset">
    <legend>@controlTitle</legend>
    <div class="row">
        <div class="col-md-9">
            <form class="form-horizontal" role="form" id="editForm">
                @Html.HiddenFor(m => m.Id)
                @Html.ValidationSummary()
                <div class="col-md-9">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.StoredYears, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.StoredYears, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Description, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Scanned, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Html.CheckBoxFor(m => m.Scanned)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Image, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Html.CheckBoxFor(m => m.Image)
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <div class="col-md-12">
                            <button type="button" id="save" name="save" value="save" class="btn btn-primary" title="@T("Common.Save")">@T("Common.Save")</button>
                            <button type="button" id="cancel" name="cancel" value="cancel" class="btn btn-default" title="@T("Common.Cancel")">@T("Common.Cancel")</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</fieldset>
